<body data-entity="department">
<h3>Edit Department</h3>
<form id="editForm">
  <div class="row">
    <div class="col-md-4 mb-3">
      <label for="departmentId" class="form-label">Department ID</label>
      <input type="text" class="form-control" id="departmentId" placeholder="Enter department ID to edit" required>
    </div>
    <div class="col-md-4 mb-3">
      <label for="departmentName" class="form-label">Name</label>
      <input type="text" class="form-control" id="departmentName" placeholder="Enter new name" required>
    </div>
    <div class="col-md-4 mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea class="form-control" id="description" rows="3" placeholder="Enter new description" required></textarea>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Update Department</button>
</form>
<script src="/js/entityScripts.js"></script>
</body>
