<body data-entity="department">
<h3>Add a New Department</h3>
<form id="addForm">
  <div class="row">
    <div class="col-md-6 mb-3">
      <label for="departmentName" class="form-label">Name</label>
      <input type="text" class="form-control" id="departmentName" placeholder="Enter department name" required>
    </div>
    <div class="col-md-6 mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea class="form-control" id="description" rows="3" placeholder="Enter description" required></textarea>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Add Department</button>
</form>
<script src="/js/entityScripts.js"></script>
</body>
